{{> header pageTitle="SECA" class="header"}}
<header class="headerAllGroups">
  <a href="/site/home">Sign Out</a>
  <a> | </a>
  <a href="/site/allGroups?userId={{userId}}">All Groups</a>
</header>

<form class="container" method="POST" action="/site/updateGroup/{{userId}}/{{group.groupId}}">
  <h3>Update Group</h3>
  <p>Name: <input type="text" value="{{group.name}}" name="groupName" maxlength="15"></p>
  <p>Description: <input type="text" value="{{group.description}}" name="groupDescription" maxlength="80"></p>
  <button type="submit">Update</button>
</form>

<hr>

<div class="details-buttons">
<form  method="POST" action='/site/groups/delete/{{userId}}/{{group.groupId}}'>
  <input type="submit" value="Delete Group">
</form>

<form  method="GET" action='/site/events/{{userId}}/{{group.groupId}}'>
  <input type="submit" value="Add Event">
</form>
</div>

<section class="sectionMain">
  {{#each group.events}}
    <section class="add-event-form">
      <h3>{{this.name}}</h3>
            <p>Data: {{this.date}}</p>
            <p>Gênero: {{this.genre}}</p>
            <p>Sub-Gênero: {{this.subGenre}}</p>
            <p>Segmento: {{this.segment}}</p>
            <p>Vendas: {{this.sales}}</p>
            <div class="event-image-container">
              <img src="{{this.image}}" alt="" class="event-image">
            </div>
        <div class="add-to-group-container">
          {{> deleteEvent eventId=this.id userId=../userId groupId=../group.groupId}}
      </div>
    </section>
  {{/each}}
</section>
